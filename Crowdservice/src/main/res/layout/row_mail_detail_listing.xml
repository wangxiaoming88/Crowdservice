<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/login_blue_line_left_right_margin" >

    <com.crowdserviceinc.crowdservice.widget.CircleImageView
        android:id="@+id/ivMessageIcon"
        android:layout_width="@dimen/edit_profile_image_width_size"
        android:layout_height="@dimen/edit_profile_image_width_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:scaleType="centerCrop" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/ivMessageIcon"
	    android:layout_toEndOf="@+id/ivMessageIcon">
        <TextView
	        android:id="@+id/txtMessage"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/agreement_text_bottom_padding"
	        android:text=""
	        android:textColor="@android:color/black"
	        android:textSize="@dimen/mailbox_subtitle_text_size"
	         />
        <ImageView 
            android:id="@+id/imgMessage"
            android:layout_width="162dp"
	        android:layout_height="182dp"
	        android:paddingTop="@dimen/agreement_text_bottom_padding"/>
    </LinearLayout>
    

</RelativeLayout>