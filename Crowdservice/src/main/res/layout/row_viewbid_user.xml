<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue" >

    <RelativeLayout
        android:id="@+id/row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <!-- <ImageButton
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/go" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/viewName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bidder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="vikash"
                    android:textSize="17sp"
                    android:textColor="@android:color/white" />

                <LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_below="@+id/bidder_name"
				    android:layout_marginTop="10dp" >
				
				    <ImageView
				        android:id="@+id/rating_star1"
				        android:layout_width="20dp"
				        android:layout_height="20dp"
				        android:background="@drawable/blackstar" >
				    </ImageView>
				
				    <ImageView
				        android:id="@+id/rating_star2"
				        android:layout_width="20dp"
				        android:layout_height="20dp"
				        android:background="@drawable/blackstar" >
				    </ImageView>
				
				    <ImageView
				        android:id="@+id/rating_star3"
				        android:layout_width="20dp"
				        android:layout_height="20dp"
				        android:background="@drawable/blackstar" >
				    </ImageView>
				
				    <ImageView
				        android:id="@+id/rating_star4"
				        android:layout_width="20dp"
				        android:layout_height="20dp"
				        android:background="@drawable/blackstar" >
				    </ImageView>
				
				    <ImageView
				        android:id="@+id/rating_star5"
				        android:layout_width="20dp"
				        android:layout_height="20dp"
				        android:background="@drawable/blackstar" >
				    </ImageView>
				
				</LinearLayout>
                <!-- <RatingBar
                    android:id="@+id/bidder_rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bidder_name"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="0.0"
                    android:layout_marginTop="10dp" /> -->
                    
                    
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgMapMarker"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/marker_blank_red"/>
            
            <ImageView
                android:id="@+id/imgShield"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shieldx" />
            
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                 />
                
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background ="#165F8F"
                >

                <TextView
                    android:id="@+id/bidder_price"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="$"
                    android:textSize="19sp"
                    android:textColor="@android:color/white"
                    android:padding="5dp" />
                   
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/bidder_price"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Accept"
                    android:textColor="@android:color/white" 
                    android:layout_marginTop="2dp"
                    android:textSize="17sp"
                    android:padding="5dp" />
                <Button
                    android:id="@+id/bidder_accept"
                    android:layout_width="80dp"
                    android:layout_height="62dp"   
                    android:background="@android:color/transparent" 
                    android:padding="5dp"                
                    />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>