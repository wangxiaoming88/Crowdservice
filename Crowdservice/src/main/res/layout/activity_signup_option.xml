<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/sign_up_text_size"
            android:text="@string/register"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/left"
            android:drawableStart="@drawable/left"
            android:gravity="center"
            android:text="@string/login"
            android:textSize="@dimen/sign_up_text_size"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <Button
        android:id="@+id/facebook_register"
        android:layout_width="@dimen/login_with_fb_width"
        android:layout_height="@dimen/login_with_fb_height"
        android:textSize="@dimen/sign_up_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/login_with_fb_height"
        android:background="@drawable/blank_btn2x"
        android:text="@string/register_with_fb"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/email_register"
        android:layout_width="@dimen/login_with_email_width"
        android:layout_height="@dimen/login_with_fb_height"
        android:textSize="@dimen/sign_up_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/enter_uname_pwd_left_right_margin"
        android:background="@drawable/blank_btn2x"
        android:text="@string/register_with_email"
        android:textColor="@android:color/white" />

</LinearLayout>