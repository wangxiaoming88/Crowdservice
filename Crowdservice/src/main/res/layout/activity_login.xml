<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gofer_icon"
    tools:context="com.example.teststripe.MainActivity" >

    <LinearLayout
        android:id="@+id/signupRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/login_logo_top_padding"
        android:visibility="visible" >

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle"
            android:paddingBottom="@dimen/signin_signup_top_bottom_padding"
            android:paddingLeft="@dimen/login_signup_left_right_padding"
            android:paddingRight="@dimen/login_signup_left_right_padding"
            android:paddingTop="@dimen/signin_signup_top_bottom_padding"
            android:text="@string/sign_up"
            android:textColor="#ffffff"
            android:textSize="@dimen/sign_up_text_size" />

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_marginBottom="@dimen/login_blue_line_bottom_margin"
            android:layout_marginLeft="@dimen/login_blue_line_left_right_margin"
            android:layout_marginRight="@dimen/login_blue_line_left_right_margin"
            android:layout_marginTop="@dimen/login_blue_line_top_margin"
            android:background="#93BBCC" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/already_have_account"
            android:textColor="#ffffff"
            android:textSize="@dimen/sign_up_text_size" />

        <Button
            android:id="@+id/btnSignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/login_blue_line_left_right_margin"
            android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
            android:background="@drawable/rectangle"
            android:paddingBottom="@dimen/signin_signup_top_bottom_padding"
            android:paddingLeft="@dimen/login_signin_left_right_padding"
            android:paddingRight="@dimen/login_signin_left_right_padding"
            android:paddingTop="@dimen/signin_signup_top_bottom_padding"
            android:text="@string/sign_in"
            android:textColor="#ffffff"
            android:textSize="@dimen/sign_up_text_size" >
        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical" >

            <Button
	           android:id="@+id/btnTutorial"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="bottom|center_horizontal"
	           android:layout_marginBottom="@dimen/login_blue_line_left_right_margin"
	           android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
	           android:background="@drawable/rectangle_red"
	           android:paddingBottom="@dimen/signin_signup_top_bottom_padding"
	           android:paddingLeft="@dimen/login_signin_left_right_padding"
	           android:paddingRight="@dimen/login_signin_left_right_padding"
	           android:paddingTop="@dimen/signin_signup_top_bottom_padding"
	           android:text="@string/watch_tutorial_hyperlink"
	           android:textColor="#ffffff"
	           android:textSize="@dimen/sign_up_text_size" >
        </Button>
            <!-- <LinearLayout
                android:id="@+id/layouttutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/login_blue_line_bottom_margin" >

                <TextView
                    android:id="@+id/txttutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watch_tutorial_hyperlink"
                    android:textColor="@drawable/link_text_selector"
                    android:textSize="@dimen/login_as_guest_text_size" />
            </LinearLayout> -->

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_using_crowdservice_agree"
                android:textColor="@android:color/white"
                android:textSize="@dimen/agreement_text_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/agreement_text_bottom_padding" >

                <TextView
                    android:id="@+id/txtTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_to_use"
                    android:textColor="@drawable/link_text_selector"
                    android:textSize="@dimen/agreement_text_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/and"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/agreement_text_text_size" />

                <TextView
                    android:id="@+id/txtPrivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_policy"
                    android:textColor="@drawable/link_text_selector"
                    android:textSize="@dimen/agreement_text_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/logInRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageButton
                android:id="@+id/btnFBLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/fb_login"
                android:layout_below="@+id/viewjob_headerLayout" />
        
        <EditText
            android:id="@+id/loginName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height"
            android:layout_above="@+id/loginPassword"
            android:layout_marginLeft="@dimen/enter_uname_pwd_left_right_margin"
            android:layout_marginRight="@dimen/enter_uname_pwd_left_right_margin"
            android:background="@drawable/rectangle_editview"
            android:ems="10"
            android:padding="3dip"
            android:hint="@string/enter_username"
            android:textColorHint="@color/hint_color"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_as_guest_text_size"
            android:singleLine="true"
            android:textStyle="bold" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height"
            android:layout_above="@+id/view1"
            android:layout_marginLeft="@dimen/enter_uname_pwd_left_right_margin"
            android:layout_marginRight="@dimen/enter_uname_pwd_left_right_margin"
            android:layout_marginTop="@dimen/login_blue_line_bottom_margin"
            android:background="@drawable/rectangle_editview"
            android:ems="10"
            android:padding="3dip"
            android:fontFamily="sans-serif"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:textColorHint="@color/hint_color"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_as_guest_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/loginForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/forgotpassword"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_padding_30"
             />
            
        <FrameLayout
            android:id="@+id/viewjob_headerLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/blue_top_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/viewjob_btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/agreement_text_bottom_padding"
                android:layout_marginStart="@dimen/agreement_text_bottom_padding"
                android:gravity="center_vertical"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sign_up_text_size" />

            <TextView
                android:id="@+id/viewjob_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sign_up_text_size" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>