<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/contact_headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Contact Customer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/left"
            android:drawableStart="@drawable/left"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sign_up_text_size" />

        <TextView
            android:id="@+id/txtChooseJob"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="Choose Job"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/contact_profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/txtJobName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Job"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dip"
            android:layout_weight="0.72" >

            <ImageView
                android:id="@+id/star_ratin1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/star_ratin2"
                android:src="@drawable/blackstar" />

            <ImageView
                android:id="@+id/star_ratin2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/star_ratin3"
                android:src="@drawable/blackstar" />

            <ImageView
                android:id="@+id/star_ratin3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/star_ratin4"
                android:src="@drawable/blackstar" />

            <ImageView
                android:id="@+id/star_ratin4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/star_ratin5"
                android:src="@drawable/blackstar" />

            <ImageView
                android:id="@+id/star_ratin5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/blackstar" />

            <ImageView
                android:id="@+id/txtshield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/star_ratin2"
                android:background="@drawable/shieldx" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <RatingBar
            android:id="@+id/contact_rating_bar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="0.0"
            android:visibility="gone" />

        <TextView
            android:id="@+id/contact_miles"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/done_blue"
            android:gravity="center"
            android:text="1 Mile"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/contact_one"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/blank_btn2x"
                android:gravity="center"
                android:text="one"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/contact_two"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blank_btn2x"
                android:gravity="center"
                android:text="two"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/contact_three"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blank_btn2x"
                android:gravity="center"
                android:text="three"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/contact_four"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blank_btn2x"
                android:gravity="center"
                android:text="Four"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/contact_five"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blank_btn2x"
                android:gravity="center"
                android:text="Five"
                android:textColor="@android:color/white" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext" >

                <EditText
                    android:id="@+id/contact_entertext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/resetfield2"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/resetfield2"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="Enter Text"
                    android:singleLine="true"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/camera"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:src="@android:drawable/ic_menu_camera" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cancel_transaction"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cancel Transaction"
                    android:textColor="@android:color/white" />

                <SeekBar
                    android:id="@+id/contact_seekbar_cancel_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/custom_progressbar"
                    android:thumb="@drawable/sliderhandle" />
            </LinearLayout>

            <Button
                android:id="@+id/contact_complete_transaction"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/complete_transaction"
                android:gravity="center"
                android:text="Complete Transaction"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>