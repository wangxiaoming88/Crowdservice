                android:textColor="@android:color/black" /> -->

            <com.crowdserviceinc.crowdservice.widget.SegmentedGroup
                android:id="@+id/segQeustion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="1dp"
                segmentedgroup:sc_checked_text_color="@android:color/white"
                segmentedgroup:sc_corner_radius="5dp"
                segmentedgroup:sc_tint_color="@color/category_blue"
                >

                <RadioButton
                    android:id="@+id/btnYes1"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/txtYes"
                    android:textSize="@dimen/agreement_text_text_size" />

                <RadioButton
                    android:id="@+id/btnNo1"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txtNo"
                    android:textSize="@dimen/agreement_text_text_size"
                    android:checked="true" />


            </com.crowdserviceinc.crowdservice.widget.SegmentedGroup>

            <TextView
                android:id="@+id/rating_question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="Do you like ridding of bike?"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <com.crowdserviceinc.crowdservice.widget.SegmentedGroup
                android:id="@+id/segQeustion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="1dp"
                segmentedgroup:sc_checked_text_color="@android:color/white"
                segmentedgroup:sc_corner_radius="5dp"
                segmentedgroup:sc_tint_color="@color/category_blue"
                >

                <RadioButton
                    android:id="@+id/btnYes2"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/txtYes"
                    android:textSize="@dimen/agreement_text_text_size" />

                <RadioButton
                    android:id="@+id/btnNo2"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txtNo"
                    android:textSize="@dimen/agreement_text_text_size"
                    android:checked="true"/>


            </com.crowdserviceinc.crowdservice.widget.SegmentedGroup>

