<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/viewjob_headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/header"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="PayPal Details"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sign_up_text_size" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/left"
            android:drawableStart="@drawable/left"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sign_up_text_size" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="@dimen/login_blue_line_top_margin"
            android:paddingLeft="@dimen/login_blue_line_top_margin"
            android:paddingRight="@dimen/login_blue_line_top_margin"
            android:paddingStart="@dimen/login_blue_line_top_margin"
            android:paddingTop="@dimen/login_blue_line_top_margin" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/login_blue_line_top_margin"
                android:text="Please enter your PayPal email address. Crowdservice can only pay for your work into your PayPal account. \n(We only need your ID to pay you, not your password)."
                android:textColor="@android:color/white"
                android:textSize="@dimen/login_as_guest_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtPaypalId"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
                android:background="@drawable/input12x"
                android:ems="10"
                android:hint="Paypal ID"
                android:padding="@dimen/register_edittext_top_margin"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/login_as_guest_text_size" />

            <EditText
                android:id="@+id/txtCPaypalId"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
                android:background="@drawable/input12x"
                android:ems="10"
                android:hint="Confirm"
                android:inputType="textEmailAddress"
                android:padding="@dimen/register_edittext_top_margin"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/login_as_guest_text_size" />

            <EditText
                android:id="@+id/txtfirstname"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
                android:background="@drawable/input12x"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textEmailAddress"
                android:padding="@dimen/register_edittext_top_margin"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/login_as_guest_text_size" />

            <EditText
                android:id="@+id/txtlastname"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
                android:background="@drawable/input12x"
                android:ems="10"
                android:hint="Last"
                android:inputType="textEmailAddress"
                android:padding="@dimen/register_edittext_top_margin"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/login_as_guest_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/login_blue_line_bottom_margin"
                android:paddingLeft="@dimen/login_blue_line_bottom_margin"
                android:paddingRight="@dimen/login_blue_line_bottom_margin"
                android:paddingStart="@dimen/login_blue_line_bottom_margin"
                android:paddingTop="@dimen/login_blue_line_bottom_margin" >

                <Button
                    android:id="@+id/btnPaypalVerify"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
                    android:background="@drawable/blank_btn2x"
                    android:gravity="center"
                    android:text="Verify"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/login_as_guest_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
