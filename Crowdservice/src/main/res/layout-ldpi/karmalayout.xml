<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/txtfeedbackcustomer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/backbtn"
            android:gravity="center"
            android:text="  Back"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layoutSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/txtkarma"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/txtquestion"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/rating_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="left"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rating_answer_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@android:color/transparent"
                    android:drawableLeft="@drawable/custom_radio"
                    android:paddingLeft="5dp"
                    android:text="Yes"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/rating_answer_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@android:color/transparent"
                    android:drawableLeft="@drawable/custom_radio"
                    android:paddingLeft="5dp"
                    android:text="No"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/rating_question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rating_answer_yes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@android:color/transparent"
                    android:drawableLeft="@drawable/custom_radio"
                    android:paddingLeft="5dp"
                    android:text="Yes"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/rating_answer_no2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@null"
                    android:button="@android:color/transparent"
                    android:drawableLeft="@drawable/custom_radio"
                    android:paddingLeft="5dp"
                    android:text="No"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="@dimen/logout_button_width"
        android:layout_height="@dimen/login_with_fb_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/login_blue_line_bottom_margin"
        android:background="@drawable/blank_btn2x"
        android:text="@string/txtsubmit"
        android:textColor="@android:color/white"
        android:textSize="@dimen/login_as_guest_text_size" />

</LinearLayout>